<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <!-- Permite la IP de tu PC si sigues queriendo usarla directamente -->
        <domain includeSubdomains="true">192.168.1.21</domain>
        <!-- Â¡Nuevo! Permite localhost, necesario para adb reverse -->
        <domain includeSubdomains="true">localhost</domain>
        <!-- Opcional, pero recomendado para emuladores y algunos casos de USB -->
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>
</network-security-config>